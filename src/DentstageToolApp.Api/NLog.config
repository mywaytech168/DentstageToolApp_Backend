<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\dentstage-internal-nlog.txt">

  <!-- 啟用 ASP.NET Core 佈局渲染器 -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- 定義目標（輸出位置） -->
  <targets>
    <!-- 所有日誌寫入檔案 -->
    <target xsi:type="File" name="allfile" fileName="c:\temp\dentstage-logs\nlog-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <!-- 自己的日誌（排除 Microsoft 框架日誌） -->
    <target xsi:type="File" name="ownFile-web" fileName="c:\temp\dentstage-logs\nlog-own-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />

    <!-- IIS 專用：寫入應用程式目錄的 logs 資料夾 -->
    <target xsi:type="File" name="iis-file" fileName="${basedir}\logs\app-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}" 
            archiveFileName="${basedir}\logs\archives\app-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- 主控台輸出（用於開發環境） -->
    <target xsi:type="Console" name="lifetimeConsole" layout="${MicrosoftConsoleLayout}" />

    <!-- ColoredConsole 輸出 -->
    <target xsi:type="ColoredConsole" name="colorConsole"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />
  </targets>

  <!-- 定義記錄規則 -->
  <rules>
    <!-- 所有日誌輸出到 allfile -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!-- 跳過 Microsoft 不重要的日誌，提升效能 -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <!-- 應用程式自己的日誌 -->
    <logger name="DentstageToolApp.*" minlevel="Debug" writeTo="ownFile-web,iis-file,colorConsole" />

    <!-- IIS 環境下所有日誌都寫入 iis-file -->
    <logger name="*" minlevel="Info" writeTo="iis-file,colorConsole" />
  </rules>
</nlog>
